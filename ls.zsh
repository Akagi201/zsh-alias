alias ls='eza --group-directories-first' # ls
alias l='eza -lbhF --git --group-directories-first --no-user --no-time --octal-permissions' # list, size, type, git
alias la='eza -lbhaF --git --group-directories-first --no-user --no-time --octal-permissions'
alias l1='eza -1 --group-directories-first' # one column, just names
alias lt='eza --tree --level=2 --group-directories-first' # tree
alias ld='erd -L 1 -H -. -i --octal -l --dir-order last -y inverted -d logical'
